<Window
  x:Class="TimeTracker.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Time_Tracker"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="800"
  Height="450"
  mc:Ignorable="d">

  <!--  main grid  -->
  <Grid>

    <!--  header grid  -->
    <Grid
      Height="50"
      VerticalAlignment="Top"
      Background="Black">
      <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition Width="150" />
      </Grid.ColumnDefinitions>
      <Label
        x:Name="HeaderLabel"
        Grid.Column="0"
        Margin="10,0,0,0"
        d:Content="Header Label"
        FontSize="28"
        FontWeight="Light"
        Foreground="White" />
      <Button
        x:Name="StrartStopButton"
        Grid.Column="1"
        Margin="5"
        Background="#00AA00"
        Content="Start" FontSize="24"
        Foreground="White"/>
    </Grid>
    <!--  end of header grid  -->

  </Grid>
  <!--  end of main grid  -->
</Window>
